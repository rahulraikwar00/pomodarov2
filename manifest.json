{
  "manifest_version": 3,
  "name": "Click to run",
  "description": "Runs a script when the user clicks the action toolbar icon.",
  "version": "1.0",

  "icons": {
    "16": "logo/pawprint16.png",
    "48": "logo/pawprint64.png",
    "128": "logo/pawprint128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "logo/pawprint16.png"
  },

  "background": {
    "service_worker": "scripts/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/animation.js",
        "scripts/timer.js",
        "scripts/sound.js",
        "scripts/content-script.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["scripting", "activeTab", "declarativeContent", "tabs"],
  "web_accessible_resources": [
    {
      "resources": [
        "images/walkpng.png",
        "images/finish.png",
        "sound/celebratesound.mp3",
        "sound/lofiloop.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
