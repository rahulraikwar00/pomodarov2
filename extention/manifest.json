{
  "manifest_version": 3,
  "name": "Click to run",
  "description": "Runs a script when the user clicks the action toolbar icon.",
  "version": "1.0",

  "icons": {
    "16": "logo/pawprint16.png",
    "48": "logo/pawprint64.png",
    "128": "logo/pawprint128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo/pawprint16.png"
  },

  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "js": ["content-script.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["scripting", "activeTab", "declarativeContent"]
}
